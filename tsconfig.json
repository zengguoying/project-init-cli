{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["./index.ts", "src**/*.ts"]
}